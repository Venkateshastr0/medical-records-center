<Window x:Class="MedicalRecordsCenter.Views.PatientDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Patient Details - Medical Records Center"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    
    <Border Background="White" 
            CornerRadius="10" 
            BorderBrush="#E0E0E0" 
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryBrush}" 
                    CornerRadius="10,10,0,0"
                    Height="60">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <materialDesign:PackIcon Kind="AccountDetails" 
                                                Foreground="White"
                                                Width="24" 
                                                Height="24"
                                                VerticalAlignment="Center"
                                                Margin="0,0,10,0" />
                        <TextBlock Text="Patient Details" 
                                   FontFamily="{StaticResource UbuntuMediumFont}"
                                   FontSize="18"
                                   FontWeight="Medium"
                                   Foreground="White"
                                   VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Close Button -->
                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Click="CloseButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            Margin="0,0,10,0">
                        <materialDesign:PackIcon Kind="Close" />
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="40,30">
                <StackPanel>
                    <!-- Patient Summary -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Patient Avatar -->
                            <Border Grid.Column="0"
                                    Background="{StaticResource PrimaryBrush}"
                                    Width="80"
                                    Height="80"
                                    CornerRadius="40"
                                    Margin="0,0,20,0">
                                <materialDesign:PackIcon Kind="Account" 
                                                        Foreground="White"
                                                        Width="40" 
                                                        Height="40"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                            </Border>

                            <!-- Patient Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="PatientNameTextBlock"
                                           Text="John Doe"
                                           Style="{StaticResource Header4}"
                                           Margin="0,0,0,5" />
                                <TextBlock x:Name="PatientAgeTextBlock"
                                           Text="Age: 30"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,3" />
                                <TextBlock x:Name="PatientGenderTextBlock"
                                           Text="Gender: Male"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,3" />
                                <TextBlock x:Name="PatientBloodTypeTextBlock"
                                           Text="Blood Type: A+"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,3" />
                                <TextBlock x:Name="PatientIdTextBlock"
                                           Text="ID: PAT-001"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                            </StackPanel>

                            <!-- Status Badge -->
                            <Border Grid.Column="2"
                                    Background="{StaticResource SuccessBrush}"
                                    CornerRadius="15"
                                    Padding="10,5"
                                    VerticalAlignment="Center">
                                <TextBlock Text="Active"
                                           Foreground="White"
                                           FontFamily="{StaticResource UbuntuMediumFont}"
                                           FontSize="12"
                                           FontWeight="Medium" />
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Contact Information -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Contact Information"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0"
                                           Text="Phone:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="0" Grid.Row="1"
                                           x:Name="PatientPhoneTextBlock"
                                           Text="+1 (555) 123-4567"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />

                                <TextBlock Grid.Column="1" Grid.Row="0"
                                           Text="Email:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                           x:Name="PatientEmailTextBlock"
                                           Text="john.doe@email.com"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />

                                <TextBlock Grid.Column="0" Grid.Row="2"
                                           Text="Address:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="0" Grid.Row="3"
                                           x:Name="PatientAddressTextBlock"
                                           Text="123 Main St, City, State 12345"
                                           Style="{StaticResource Body2}"
                                           Grid.ColumnSpan="2"
                                           TextWrapping="Wrap" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Medical Information -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Medical Information"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0"
                                           Text="Date of Birth:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="0" Grid.Row="1"
                                           x:Name="PatientDOBTextBlock"
                                           Text="January 1, 1994"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />

                                <TextBlock Grid.Column="1" Grid.Row="0"
                                           Text="Emergency Contact:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="1" Grid.Row="1"
                                           x:Name="PatientEmergencyContactTextBlock"
                                           Text="Jane Doe (555) 987-6543"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />

                                <TextBlock Grid.Column="0" Grid.Row="2"
                                           Text="Primary Care Physician:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="0" Grid.Row="3"
                                           x:Name="PatientPCPTextBlock"
                                           Text="Dr. Smith"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />

                                <TextBlock Grid.Column="1" Grid.Row="2"
                                           Text="Insurance:"
                                           Style="{StaticResource Caption1}"
                                           Margin="0,0,0,3" />
                                <TextBlock Grid.Column="1" Grid.Row="3"
                                           x:Name="PatientInsuranceTextBlock"
                                           Text="Blue Cross Shield - POL12345"
                                           Style="{StaticResource Body2}"
                                           Margin="0,0,0,15" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Medical History -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Medical History"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <TextBlock x:Name="PatientMedicalHistoryTextBlock"
                                       Text="Patient has no significant medical history."
                                       Style="{StaticResource Body2}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!-- Allergies -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Allergies"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <TextBlock x:Name="PatientAllergiesTextBlock"
                                       Text="No known allergies."
                                       Style="{StaticResource Body2}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!-- Current Medications -->
                    <Border Style="{StaticResource BasicCard}" 
                            Margin="0,0,0,30"
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Current Medications"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <TextBlock x:Name="PatientMedicationsTextBlock"
                                       Text="No current medications."
                                       Style="{StaticResource Body2}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>

                    <!-- Notes -->
                    <Border Style="{StaticResource BasicCard}" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Notes"
                                       Style="{StaticResource Header6}"
                                       Margin="0,0,0,15" />
                            
                            <TextBlock x:Name="PatientNotesTextBlock"
                                       Text="No additional notes."
                                       Style="{StaticResource Body2}"
                                       TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#F5F5F5" 
                    CornerRadius="0,0,10,10"
                    Height="70">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Status Message -->
                    <TextBlock Grid.Column="0"
                               x:Name="StatusTextBlock"
                               FontFamily="{StaticResource UbuntuFont}"
                               FontSize="12"
                               Foreground="#666"
                               VerticalAlignment="Center"
                               Margin="20,0" />

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center"
                                Margin="20,0">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Click="EditButton_Click"
                                FontFamily="{StaticResource UbuntuFont}"
                                FontSize="14"
                                Margin="0,0,10,0">
                            Edit Patient
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Click="PrintButton_Click"
                                FontFamily="{StaticResource UbuntuFont}"
                                FontSize="14"
                                Margin="0,0,10,0">
                            Print
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Click="CloseButton_Click"
                                FontFamily="{StaticResource UbuntuFont}"
                                FontSize="14">
                            Close
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
