<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Header Text Styles -->
    <Style x:Key="Header1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="40" />
    </Style>

    <Style x:Key="Header2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="32" />
    </Style>

    <Style x:Key="Header3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="28" />
    </Style>

    <Style x:Key="Header4" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style x:Key="Header5" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="22" />
    </Style>

    <Style x:Key="Header6" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <!-- Body Text Styles -->
    <Style x:Key="Body1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#333333" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style x:Key="Body2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#333333" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <Style x:Key="Body3" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#333333" />
        <Setter Property="LineHeight" Value="18" />
    </Style>

    <!-- Caption Text Styles -->
    <Style x:Key="Caption1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#666666" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

    <Style x:Key="Caption2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#666666" />
        <Setter Property="LineHeight" Value="14" />
    </Style>

    <!-- Status Text Styles -->
    <Style x:Key="SuccessText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
    </Style>

    <Style x:Key="WarningText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource WarningBrush}" />
    </Style>

    <Style x:Key="ErrorText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
    </Style>

    <Style x:Key="InfoText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
    </Style>

    <!-- Link Text Style -->
    <Style x:Key="LinkText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="TextDecorations" Value="Underline" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#0099cc" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Monospace Text Style -->
    <Style x:Key="MonospaceText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Consolas, Courier New, monospace" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#333333" />
    </Style>

    <!-- Uppercase Text Style -->
    <Style x:Key="UppercaseText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#666666" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>

    <!-- Price Text Style -->
    <Style x:Key="PriceText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="#0d171c" />
    </Style>

    <!-- Badge Text Style -->
    <Style x:Key="BadgeText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuMediumFont}" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>

    <!-- Loading Text Style -->
    <Style x:Key="LoadingText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#666666" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!-- Disabled Text Style -->
    <Style x:Key="DisabledText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#cccccc" />
    </Style>

    <!-- Placeholder Text Style -->
    <Style x:Key="PlaceholderText" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource UbuntuFont}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#999999" />
        <Setter Property="FontStyle" Value="Italic" />
    </Style>

</ResourceDictionary>
