    <!-- Statistics Card Style -->
    <Style x:Key="StatisticsCard" TargetType="Border">
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="#E0E0E0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#000000" 
                                  Direction="270" 
                                  ShadowDepth="2" 
                                  Opacity="0.1" 
                                  BlurRadius="8" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Effect.ShadowDepth"
                                             From="2" To="4" 
                                             Duration="0:0:0.2" />
                            <ColorAnimation Storyboard.TargetProperty="Effect.Color"
                                           From="#000000" To="#0da6f2"
                                           Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Effect.ShadowDepth"
                                             From="4" To="2" 
                                             Duration="0:0:0.2" />
                            <ColorAnimation Storyboard.TargetProperty="Effect.Color"
                                           From="#0da6f2" To="#000000"
                                           Duration="0:0:0.2" />
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Info Card Style -->
    <Style x:Key="InfoCard" TargetType="Border">
